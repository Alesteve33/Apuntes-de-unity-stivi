using UnityEngine;
using System.Collections;


public class ChairSpawner : MonoBehaviour {


    void Update (){
    
        if (Input.GetKeyDown(Keycode.Space)){
    
            Vector3 randomPosition = new Vector3(Random.Range(-10f,10f), 0, Random.Range(-10f, 10f));
            
            Vector3 randomRotation = Vector3.up * Random.Range (0, 360);
            // This is the same as ->new Vector3(0, 0, 1) * Random.Range (0, 360);
            
            Intantiate (Chair, randomPosition, Quaternion.Euler (randomRotation));
   
        }
   
    }
 
 }
